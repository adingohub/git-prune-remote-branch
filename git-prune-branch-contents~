#!/usr/bin/env ruby
require 'optparse'

opts = OptionParser.new
opts.on('--noop', 'dry-run mode') { |v| $noop = true }
opts.parse!
ignore_branches = ['t_functional_test']

`git fetch --prune`
`ls /xfs0/home/branch_contents`.each_line do |branch|
  branch.strip!.chomp!
  next if ignore_branches.include?(branch)
  command = "sudo rm -rf /xfs0/home/branch_contents/#{branch}"
  if `git branch -r --merged`.include?(branch)
    puts command
    unless $noop
      system command
    end
  end
end
